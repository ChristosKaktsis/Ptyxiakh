<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Schedule"
           android:textStyle="bold"
           android:textSize="28dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/layoutborderstyle">

           <Button
               android:id="@+id/sun_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sun"
               android:textColor="#808080"
               android:layout_margin="5dp"
               android:layout_weight="1"
               app:backgroundTint="@null"
               android:background="@drawable/custom_button_style" />

           <Button
               android:id="@+id/mon_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mon"
               android:textColor="#808080"
               android:layout_weight="1"
               android:layout_margin="5dp"
               app:backgroundTint="@null"
               android:background="@drawable/whitebuttonstyle"/>

           <Button
               android:id="@+id/tue_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tue"
               android:textColor="#808080"
               android:layout_weight="1"
               android:layout_margin="5dp"
               app:backgroundTint="@null"
               android:background="@drawable/whitebuttonstyle"/>

           <Button
               android:id="@+id/wed_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="wed"
               android:textColor="#808080"
               android:layout_weight="1"
               android:layout_margin="5dp"
               app:backgroundTint="@null"
               android:background="@drawable/whitebuttonstyle"/>

           <Button
               android:id="@+id/thu_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Thu"
               android:textColor="#808080"
               android:layout_weight="1"
               android:layout_margin="5dp"
               app:backgroundTint="@null"
               android:background="@drawable/whitebuttonstyle"/>

           <Button
               android:id="@+id/fri_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Fri"
               android:textColor="#808080"
               android:layout_weight="1"
               android:layout_margin="5dp"
               app:backgroundTint="@null"
               android:background="@drawable/whitebuttonstyle"/>

           <Button
               android:id="@+id/sat_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sat"
               android:textColor="#808080"
               android:layout_weight="1"
               android:layout_margin="5dp"
               app:backgroundTint="@null"
               android:background="@drawable/whitebuttonstyle"/>


       </LinearLayout>



   </LinearLayout>

</FrameLayout>